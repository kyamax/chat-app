    <p >chatroom1</p>
  </div>
  <div class="quit-chat">
    <div class="quit-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        kisho
      </div>
      <div class="message-date">
        2022/08/18(thu)10:50:00
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        Hello!
      </div>
    </div>
  </div>

  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        yamashita
      </div>
      <div class="message-date">
        2022/08/18(thu)18:30:00
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        Goog evning!
      </div>
    </div>
